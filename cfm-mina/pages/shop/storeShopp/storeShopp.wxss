/**index.wxss**/
page {
  height: 100%;
  background: #ffffff;
}
.iconfont {
  font-size: 40rpx;
}
.shopInfo{
  width: 100%;
  height: 476rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 111;
  background: #fff;
}
.content{
  min-height: calc(100% - 540rpx);
  position: relative;
  width: 100%;
  padding-top: 486rpx;
}
.shopName{
  white-space: nowrap;
  word-break: break-all;
  text-overflow:ellipsis;
  overflow:hidden;
  display: block;
  font-size: 32rpx;
  color: #ffffff;
  line-height: 32rpx;
  /* margin-bottom: 12rpx; */
}
.shopName .shopNameN{
  font-size: 28rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #2C3038;
  line-height: 42rpx;
  height: 42rpx;
}
.shopName .shopNameI {
  margin-top: 26rpx;
  font-size: 24rpx;
}
.shopMessage{
  display: block;
  height:100%;
  background:#fff;
  padding-left: 40rpx; 
}
.message-content .mes-top {
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2C3038;
  line-height: 44rpx;
}
.shop-li {
  width: 95%;
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.shop-li>image {
  width: 440rpx;
  height: 280rpx;
  margin-bottom: 20rpx;
}
.shopBg{
  width:100%;
  height:366rpx;
  position: absolute;
  left:0;
  top:0;
}
.returnBtn {
  width: 20rpx;
  height: 36rpx;
  position: fixed;
  top: 120rpx;
  left: 30rpx;
}
.shopBg .bgC{
  display: block;
  width:100%;
  height:100%;
}
.shopBg view{
  width:100%;
  height:150rpx;
  background: rgba(0,0,0,0.28);
  position: absolute;
  left:0;
  top:0;
  z-index: 1;
}
.shopCenter{
  /* background-color: pink; */
  margin-top:224rpx;
  padding-left:36rpx;
  padding-right:36rpx;
  box-sizing: border-box;
  position: absolute;
  left:0;
  top:0;
  width: 100%;
  height: 228rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.shopTitle{
  margin:0 auto 20rpx;
  width:94%;
  height:228rpx;
  border-radius: 20rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  box-shadow: 0px 0px 8px 0px rgba(102,111,241,0.2500);
  box-sizing: border-box;
}
.shopTitle .shopName{
  color: #2C3038;
  flex: 1;
  padding-left: 26rpx;
}
.shopTitle .shopName .shopPure{
  color: #757B82;
  height: 62rpx;
  line-height: 62rpx;
  font-weight: 400;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}
.shopTitle .shopNumber{
  display: flex;
  height: 60rpx;
}
.telephone {
  margin-top: 10rpx;
  flex: 1;
  color: #757B82;
  height: 32rpx;
  line-height: 32rpx;
  font-weight: 400;
  border-right: 2rpx solid #B2B5C2;
}
.shopIconB {
  width: 100rpx;
}
.shopIcon {
  width: 68rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  background: #F7F8FA;
  border-radius: 24rpx;
  margin-left: 30rpx;
  margin-top: -10rpx;
  color: #7A66F0;
}
.shopTitle .shopImge{
  margin: 0;
  overflow: hidden;
}
.shopTitle .shopImge image{
  display: block;
  width:128rpx;
  height:128rpx;
  border-radius: 8rpx;
}
.shopN-name{
  width:100%;
  height:40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom:20rpx;
}
.shopN-name text{
  display: block;
  font-size: 36rpx;
  height:40rpx;
  line-height: 40rpx;
  color:#2C3038;
  font-weight: bold;
}
.shopN-name image{
  display: block;
  width:32rpx;
  height:32rpx;
  margin-left:14rpx;
}
