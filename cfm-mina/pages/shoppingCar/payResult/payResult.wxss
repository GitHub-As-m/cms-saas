page {
  background-color: #fff;
}
.payResult {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction:column;
  text-align: center;
}

.logo {
  margin-top: 160rpx;
  font-size: 180rpx;
  color: #2DC46A;
}
.logMess {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #2C3038;
  margin: 20rpx 0 120rpx 0;
}
.paySuccess {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 40rpx;
  font-weight: 400;
  color: #2C3038;
}
.tips {
  /* height: 80rpx; */
  color: #666666;
  font-size: 28rpx;
  font-weight: 400;
}
.tipsT {
  line-height: 28rpx;
  margin-bottom: 18rpx;
}
.button {
  height: 200rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  margin-top: 120rpx;
  color: #2C3038;
}
.button >view {
  display: inline-block;
  width: 40%;
  background-color: #fff;
  line-height: 80rpx;
  border: 1rpx solid #2C3038;
  border-radius: 40rpx;
}
.button >view:last-child {
  margin-left: 20rpx;
}
.button .bgcolor {
  background-color: #1CC296;
  border: none;
  color: #fff;
}