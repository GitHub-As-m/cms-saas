/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.addressMask{
  position:fixed;
  left:0;
  top:0;
  width:100%;
  height:100%;
  background:rgba(0, 0, 0, .5);
  z-index:102400;
}
.addressMask>.addressCenter{
  width:500rpx;
  height:220rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-left:-250rpx;
  margin-top:-110rpx;
  position: fixed;
  left:50%;
  top:50%;
  padding:30rpx 0;
}
.addressMask>.addressCenter>.address-top{
  line-height: rem(80);
  font-size: 32rpx;
  text-align: center;
}
.addressMask>.addressCenter>.address-center{
  line-height: rem(80);
  font-size: 28rpx;
  text-align: center;
  border-bottom:1rpx solid #F5F5F5;
  margin-bottom:8rpx;
  padding-bottom:50rpx;
  margin-top:30rpx;
}
.addressMask>.addressCenter>.address-footer .addAddress-bottom{
  height: rem(100);
  width: 50%;
  font-size: 28rpx;
  text-align: center;
  background: #fff;
  color:#26a925;
  border-radius: 0;
}
.address-footer{
  display: flex;
  align-items: center;
}