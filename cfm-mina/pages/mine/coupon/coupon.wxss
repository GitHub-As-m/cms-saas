
.coupon{
  width:100%;
  min-height:100%;
  background-color: #f5f5f5;
  /* padding-top:20rpx; */
  box-sizing: border-box;
  /* padding-bottom: 120rpx; */
}
.useCoupon {
  /* width: 100%; */
  /* display: flex; */
  padding: 0 20rpx;
}
.usingItem {
  width: 100%;
  margin-top: 20rpx;
}
.place {
  position: relative;
}
.useingTop {
  /* width: 100%; */
  height: 164rpx;
  display: flex;
  padding: 18rpx;
  background-color: #fff;
  display: flex;
}
.couponLeft {
  box-sizing: border-box;
  flex: 1;
  border-right: 2rpx dashed #B2B5C2;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
}
.money {
  color: #FB3640;
  font-size: 24rpx;
  font-weight: 600;
  padding-top: 10rpx;
}
.money>text {
  font-size: 68rpx;
  margin-top: 10rpx;
}
.explain {
  font-size: 24rpx;
  color: #666;
}
.couponRight {
  flex: 3;
  padding: 20rpx 0 20rpx 20rpx;
}
.activity {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.activityName {
  /* width: 69px; */
  height: 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2C3038;
  line-height: 48rpx;
}
.activityButton {
  color: #FB3640;
  width: 122rpx;
  box-sizing: border-box;
  border: 1rpx solid #fb3640;
  border-radius: 4rpx;
  height: 52rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.activityButton>text {
  font-size: 24rpx;
}
.invalidButtom {
  height: 36rpx;
  width: 112rpx;
  border-radius: 0 0 0 38rpx;
  background-color: #f99a12;
  position: absolute;
  top: 0;
  right: 0;
}
.invalidButtom>view {
  font-size: 24rpx;
  color: #fff;
  height: 38rpx;
  line-height: 38rpx;
  float: right;
  padding-right: 10rpx;
}
.activityTime {
  font-size: 22rpx;
  margin-top: 30rpx;
  color: #666;
}
.useingBottom {
  height: 58rpx;
  line-height: 58rpx;
  background-color: #FAFAFA;
  position: relative;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #9EA3AA;
}
.showTipHeight {
  height: auto;
}
.useTip {
  width: 88%;
  display: inline-block;
  padding-left: 38rpx;
}
.showTipDel {
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;/*超出部分文字以...显示*/
}
.useingBottom>.iconfont {
  font-size: 34rpx;
  /* line-height: 26rpx; */
  display: inline-block;
  position: absolute;
  right: 6rpx;
}



.usingTit {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.usingTip {
  height: 120rpx;
  line-height: 120rpx;
  color: #1cc296;
  font-size: 26rpx;
}


