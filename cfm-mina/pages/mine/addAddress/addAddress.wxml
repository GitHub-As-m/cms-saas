    <map wx:if="{{mall.id}}" id="map" longitude="{{map.longitude}}" latitude="{{map.latitude}}" polyline="{{map.polyline}}" scale="14" markers="{{map.markers}}" include-points="{{map.include-points}}" show-location="true" style="width: 100%; height: 380rpx;"></map>
  </view> -->
  <button formType="submit" class="submit-bottom reset-button {{tipShow?'bt_disabled':''}}">
    保存地址
  </button>
</form>