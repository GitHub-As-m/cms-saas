/* pages/mine/index/index.wxss */
page{
  width:100%;
  height:100%;
  background: #fff;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  position: fixed;
  left:0;
  top:0;
  right:0;
  bottom: 0;
}
.mine-container{
  min-height:100%;
  width:100%;
  background-color: #fff;
  box-sizing: border-box;
  position: relative;
}
.mine-head{
  width:100%;
  box-sizing: border-box;
  background: linear-gradient(43deg, #EBF7FF 0%, #F5F2FF 100%);
}
.mine-info{
  width:100%;
  box-shadow: 0 2rpx 16rpx 0 #E5E5E5;
  border-radius: 8rpx;
  background: linear-gradient(43deg, #EBF7FF 0%, #F5F2FF 100%);
}
.mine-info-top{
  width:100%;
  height:320rpx;
  padding: 144rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  position: relative;
}
.mine-content{
  float: left;
}
.mine-pic{
  width:120rpx;
  height:120rpx;
  float: left;
  /* border-radius: 50%; */
}
.mine-pic image{
  display: block;
  width:100%;
  height:100%;
  border-radius: 50%;
}
.mine-message{
  float: left;
  margin-left:28rpx;
  color: #2C3038;
}
.mine-message text{
  display: block;
}
.mine-name{
  font-size: 36rpx;
  /* color: #2C3038; */
  line-height: 40rpx;
  margin-top: 30rpx;
}
.mine-phone{
  font-size: 28rpx;
  /* color: #8D8E92; */
  line-height: 45rpx;
  margin-top:20rpx;
}
.mine-right-icon{
  height:120rpx;
  float: right;
  padding-top:25rpx;
}
.mine-info-bottom{
  width:100%;
  height:143rpx;
  background-color: #ffffff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding:28rpx 0rpx 0;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
  box-shadow:0 4rpx 8rpx 0 rgba(227,231,238,0.58);
}
.mine-integral{
  width:33.33%;
  float: left;
}
.integral-icon{
  float: left;
  width:68rpx;
  height:56rpx;
}
.integral-icon image{
  display: block;
  width:100%;
  height:100%;
}
.integral-title{
  display: block;
  line-height: 24rpx;
	color: #2C3038;
  font-size: 24rpx;
  text-align: center;
  margin-top:20rpx;
}
.integral-count{
  display: block;
  font-family: ï»¿PingFang-SC-Bold;
	font-size: 36rpx;
  color:#2C3038;
  line-height: 36rpx;
  text-align: center;
}
.mine-line{
  width:2rpx;
  height:43rpx;
  background: #e5e5e5;
  position: absolute;
  z-index:2;
  left:50%;
  top:60rpx;
}
.order-manage{
  width:100%;
  /* background-color: #fff; */
  /* border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx; */
  box-sizing: border-box;
  position: relative;
  z-index: 1;
  background: linear-gradient(43deg, #EBF7FF 0%, #F5F2FF 100%);
  box-sizing: border-box;
  /* box-shadow:0 4rpx 8rpx 0 rgba(227,231,238,0.58); */
}
.om-wrap{
  /* border-radius: 32rpx 32rpx 0rpx 0rpx;*/
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  width: 100%;
