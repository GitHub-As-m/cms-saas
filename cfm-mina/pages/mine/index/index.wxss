.manage-head{
  width:100%;
  padding: 30rpx 20rpx 0;
  box-sizing: border-box;
  height:106rpx;
}
.manage-title{
  display: block;
  float:left;
  height:26rpx;
  line-height: 26rpx;
  font-size: 30rpx;
  color:#2C3038;
  font-weight: bold;
}
.manage-right{
  float: right;
  height:26rpx;
}
.manage-right>text{
